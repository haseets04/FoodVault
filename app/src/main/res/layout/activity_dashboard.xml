<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="16dp"
    android:background="@drawable/screen_background"
    tools:context=".DashboardActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="2"
            android:text="@string/foodvault"
            android:textAllCaps="true"
            android:textColor="#050C57"
            android:textSize="40sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/view_inventory_btn"
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="#70B1BA"
            android:padding="18dp"
            android:text="@string/view_inventory"
            android:textColor="#311B92"
            android:textSize="20sp"
            android:onClick="onViewInventoryClicked" />

        <Button
            android:id="@+id/view_shoplist_btn"
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="#70B1BA"
            android:padding="18dp"
            android:text="@string/view_shopping_lists"
            android:textColor="#311B92"
            android:textSize="20sp"
            android:onClick="onViewShopListClicked" />

        <Button
            android:id="@+id/view_groups_btn"
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="#70B1BA"
            android:padding="18dp"
            android:text="@string/view_groups"
            android:textColor="#311B92"
            android:textSize="20sp"
            android:onClick="onViewGroupsClicked" />

    </LinearLayout>

</RelativeLayout>