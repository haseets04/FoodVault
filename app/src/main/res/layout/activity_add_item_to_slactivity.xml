<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/NormalLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".AddItemToSLActivity">

    <ImageView
        android:id="@+id/img_lemon_puddle2"
        android:layout_width="107dp"
        android:layout_height="92dp"
        android:layout_marginStart="68dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="@string/lemon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_blue_puddle3"
        app:srcCompat="@drawable/lemon"
        tools:ignore="ImageContrastCheck" />

    <ImageView
        android:id="@+id/img_blue_puddle3"
        android:layout_width="262dp"
        android:layout_height="154dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="200dp"
        android:contentDescription="@string/blue_puddle"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout13"
        app:srcCompat="@drawable/blue_puddle"
        tools:ignore="VisualLintBounds,ImageContrastCheck" />

    <ImageView
        android:id="@+id/img_peach_puddle3"
        android:layout_width="257dp"
        android:layout_height="165dp"
        android:layout_marginStart="180dp"
        android:layout_marginBottom="48dp"
        android:contentDescription="@string/peach_puddle"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout13"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/peach_puddle"
        tools:ignore="VisualLintBounds,ImageContrastCheck" />

    <LinearLayout
        android:id="@+id/linearLayout13"
        android:layout_width="354dp"
        android:layout_height="574dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="UselessParent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_new_item"
            android:textAllCaps="true"
            android:textColor="#050C57"
            android:textSize="25sp"
            android:textStyle="bold" />

        <AutoCompleteTextView
            android:id="@+id/autoname"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_margin="15sp"
            android:background="@drawable/rounded_corner"
            android:gravity="center_horizontal"
            android:hint="@string/shoppingproduct_name"
            android:padding="14sp"
            android:text="@string/empty_string"
            android:textColor="#3949AB"
            android:textColorHint="#3949AB"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tvquantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center_horizontal"
            android:text="@string/quantity_to_buy_0"
            android:textColor="#3949AB"
            android:textSize="15sp" />

        <NumberPicker
            android:id="@+id/number_picker_quantity"
            android:layout_width="300dp"
            android:layout_height="78dp"
            android:background="@drawable/number_picker_background"
            android:gravity="center_horizontal"
            android:solidColor="#FFFFFF" />

        <!--<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="106dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/itembought"
                android:textColor="#3949AB"
                android:textSize="15sp" />

            <CheckBox
                android:id="@+id/cbxbought"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:editable="true"
                android:text="@string/yes"
                android:textColor="#3949AB"
                tools:ignore="TouchTargetSizeCheck" />

        </LinearLayout>-->

        <EditText
            android:id="@+id/tvgrocerystore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:hint="@string/enter_grocery_store"
            android:minHeight="48dp"
            android:textColor="#000000"
            android:textColorHint="#546E7A"
            android:inputType="text"
            tools:ignore="SpeakableTextPresentCheck" />

        <!--<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:clickable="true"
            android:contextClickable="false"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/grocerystore"
                android:textColor="#3949AB"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/tvgrocerystore"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:hint="@string/empty_string"
                android:inputType="text"
                android:textColor="#3949AB"
                android:textSize="15sp"
                tools:ignore="SpeakableTextPresentCheck" />

        </LinearLayout>-->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_add"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:backgroundTint="#70B1BA"
                android:text="@string/add_item"
                android:textColor="#311B92" />

            <Button
                android:id="@+id/btn_cancel_product"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:backgroundTint="#70B1BA"
                android:onClick="onCancelProductClicked"
                android:text="@string/cancel_edit"
                android:textColor="#311B92" />

        </LinearLayout>

    </LinearLayout>

    <CheckBox
        android:id="@+id/cbxbought"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CheckBox"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout13" />

</androidx.constraintlayout.widget.ConstraintLayout>