<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/NormalLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/inventory_border"
    android:gravity="center"

    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".AddProductActivity">
    <LinearLayout
        android:layout_width="354dp"
        android:layout_height="574dp"
        android:gravity="center"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_new_item"
            android:textAllCaps="true"
            android:textColor="#050C57"
            android:textSize="25sp"
            android:textStyle="bold" />

        <AutoCompleteTextView
            android:id="@+id/autoname"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_margin="15sp"
            android:background="@drawable/rounded_corner"
            android:gravity="center_horizontal"
            android:hint="@string/shoppingproduct_name"
            android:padding="14sp"
            android:text="@string/empty_string"
            android:textColor="#3949AB"
            android:textColorHint="#3949AB"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tvquantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center_horizontal"
            android:text="@string/quantity_to_buy_0"
            android:textColor="#3949AB"
            android:textSize="15sp" />

        <NumberPicker
            android:id="@+id/number_picker_quantity"
            android:layout_width="300dp"
            android:layout_height="78dp"
            android:gravity="center_horizontal"
            android:background="@drawable/number_picker_background"
            android:solidColor="#FFFFFF" />

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="106dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/inventory_border"
                android:text="@string/itembought"
                android:textColor="#3949AB"
                android:textSize="15sp"
                android:visibility="gone" />

            <CheckBox
                android:id="@+id/cbxbought"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:background="@drawable/inventory_border"
                android:editable="true"
                android:text="@string/yes"
                android:textColor="#3949AB"
                android:visibility="gone"
                tools:ignore="TouchTargetSizeCheck" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:clickable="true"
            android:contextClickable="false"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/inventory_border"
                android:text="@string/grocerystore"
                android:textColor="#3949AB"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/tvgrocerystore"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:background="@drawable/inventory_border"
                android:hint="@string/empty_string"
                android:inputType="text"
                android:textColor="#3949AB"
                android:textSize="15sp"
                tools:ignore="SpeakableTextPresentCheck" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_add"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="147dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:backgroundTint="#70B1BA"
                android:text="@string/add_item"
                android:textColor="#311B92" />

            <Button
                android:id="@+id/btn_cancel_product"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:backgroundTint="#70B1BA"
                android:onClick="onCancel"
                android:text="@string/cancel_edit"
                android:textColor="#311B92" />

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>