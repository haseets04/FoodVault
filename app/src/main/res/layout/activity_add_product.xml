    <ImageView
        android:id="@+id/img_lemon_puddle2"
        android:layout_width="107dp"
        android:layout_height="92dp"
        android:layout_marginStart="68dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="@string/lemon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_blue_puddle3"
        app:srcCompat="@drawable/lemon"
        tools:ignore="ImageContrastCheck" />

    <ImageView
        android:id="@+id/img_blue_puddle3"
        android:layout_width="262dp"
        android:layout_height="154dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="200dp"
        android:contentDescription="@string/blue_puddle"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout6"
        app:srcCompat="@drawable/blue_puddle"
        tools:ignore="VisualLintBounds,ImageContrastCheck" />

    <ImageView
        android:id="@+id/img_peach_puddle3"
        android:layout_width="257dp"
        android:layout_height="165dp"
        android:layout_marginStart="180dp"
        android:layout_marginBottom="64dp"
        android:contentDescription="@string/peach_puddle"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout6"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/peach_puddle"
        tools:ignore="VisualLintBounds,ImageContrastCheck" />

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_product_manually"
            android:textAllCaps="true"
            android:textColor="#050C57"
            android:textSize="25sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/product_name_input"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:autofillHints=""
            android:background="@drawable/rounded_corner"
            android:gravity="center_horizontal"
            android:hint="@string/product_name"
            android:inputType="text"
            android:padding="14dp"
            android:textColor="#3949AB"
            android:textColorHint="#3949AB"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center_horizontal"
            android:text="@string/quantity"
            android:textColor="#3949AB"
            android:textSize="15sp" />

        <NumberPicker
            android:id="@+id/number_picker_quantity"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:gravity="center_horizontal" />

        <EditText
            android:id="@+id/expiration_date_input"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:autofillHints=""
            android:background="@drawable/rounded_corner"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_horizontal"
            android:hint="@string/expiration_date"
            android:inputType="datetime"
            android:padding="14dp"
            android:textColor="#3949AB"
            android:textColorHint="#3949AB"
            android:textSize="15sp" />

        <AutoCompleteTextView
            android:id="@+id/category_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:hint="@string/enter_category"
            android:minHeight="48dp"
            android:text="@string/empty_string"
            android:textColor="#000000"
            android:textColorHint="#546E7A"
            tools:ignore="VisualLintTextFieldSize" />

        <AutoCompleteTextView
            android:id="@+id/location_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:hint="@string/enter_location"
            android:minHeight="48dp"
            android:text="@string/empty_string"
            android:textColor="#000000"
            android:textColorHint="#546E7A"
            tools:ignore="VisualLintTextFieldSize" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_add"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:backgroundTint="#70B1BA"
                android:onClick="onAddProductClicked"
                android:text="@string/save_and_add_product_to_inventory"
                android:textColor="#311B92"
                tools:ignore="ButtonStyle,TextSizeCheck,VisualLintBounds" />

            <Button
                android:id="@+id/btn_cancel_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:backgroundTint="#70B1BA"
                android:onClick="onCancelProductClicked"
                android:text="@string/cancel_product_entry"
                android:textColor="#311B92"
                tools:ignore="ButtonStyle" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>