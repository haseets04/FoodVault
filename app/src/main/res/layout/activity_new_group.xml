<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/screen_background"
    tools:context=".NewGroupActivity">

    <ImageView
        android:id="@+id/profile_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/account_circle_icon" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/profile_icon"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="Create Group"
        android:fontFamily="@font/shrikhand"
        android:shadowColor="#214069"
        android:textColor="#050C57"
        android:textSize="35sp" />

    <LinearLayout
        android:id="@+id/group_container"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@id/title"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/inventory_border">
        <!-- This container will hold dynamically added items -->

        <!--<ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="ScrollView" />-->

        <EditText
            android:id="@+id/groupName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:hint="Group Name"
            android:inputType="text"
            android:minHeight="48dp"
            android:textSize="18sp" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_add_members_to_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/group_container"
        android:layout_marginStart="200dp"
        android:layout_marginTop="20dp"
        android:text="Add Members to Group"
        android:textColor="#311B92"
        android:backgroundTint="#70B1BA"
        android:onClick="onAddMembersToGroupClicked" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btn_save_new_group"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="Save New Group"
            android:textColor="#311B92"
            android:backgroundTint="#70B1BA"
            android:onClick="onSaveNewGroupClicked" />

        <Button
            android:id="@+id/btn_cancel_group_entry"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#70B1BA"
            android:text="Cancel Entry"
            android:textColor="#311B92"
            android:onClick="onCancelNewGroupClicked" />

    </LinearLayout>

</RelativeLayout>